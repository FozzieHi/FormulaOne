{
  "extends": "@tsconfig/node20/tsconfig.json",

  "include": ["src/**/*"],

  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noEmitHelpers": true,
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
