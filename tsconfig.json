{
  "extends": "@tsconfig/node20/tsconfig.json",

  "include": ["src/**/*"],

  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noEmitHelpers": true,
    "importHelpers": true
  }
}
