{
  "name": "formula_one",
  "version": "1.0.0",
  "description": "The Formula One Discord Bot.",
  "main": "target/index.js",
  "type": "module",
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "prettier:write": "prettier --cache --write .",
    "prettier:check": "prettier --cache --check .",
    "eslint:write": "eslint . --fix",
    "eslint:check": "eslint .",
    "build": "rm -rf target/ && tsc",
    "start": "node target/index.js"
  },
  "author": "Fozzie#0001",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sapphire/framework": "^4.4.0",
    "@sapphire/plugin-logger": "^3.0.3",
    "@sentry/integrations": "^7.48.0",
    "@sentry/node": "^7.48.0",
    "@sentry/tracing": "^7.48.0",
    "@tsconfig/node18": "^1.0.1",
    "async-mutex": "^0.4.0",
    "bufferutil": "^4.0.7",
    "discord.js": "^14.9.0",
    "erlpack": "github:discord/erlpack",
    "mongodb": "^5.3.0",
    "re2": "^1.18.0",
    "tslib": "^2.5.0",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
