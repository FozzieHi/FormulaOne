{
  "name": "formula_one",
  "version": "1.0.0",
  "description": "The Formula One Discord Bot.",
  "main": "target/index.js",
  "type": "module",
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "prettier:write": "prettier --cache --write .",
    "prettier:check": "prettier --cache --check .",
    "eslint:write": "eslint . --fix",
    "eslint:check": "eslint .",
    "build": "rm -rf target/ && tsc",
    "start": "node target/index.js"
  },
  "author": "Fozzie#0001",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sapphire/framework": "^4.5.0",
    "@sapphire/plugin-logger": "^3.0.4",
    "@sentry/integrations": "^7.63.0",
    "@sentry/node": "^7.64.0",
    "@sentry/tracing": "^7.64.0",
    "@tsconfig/node18": "^18.2.0",
    "async-mutex": "^0.4.0",
    "bufferutil": "^4.0.7",
    "discord.js": "^14.12.1",
    "dotenv": "^16.3.1",
    "erlpack": "github:discord/erlpack",
    "mongodb": "^5.7.0",
    "re2": "^1.20.1",
    "tslib": "^2.6.0",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
