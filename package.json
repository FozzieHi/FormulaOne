{
  "name": "formula_one",
  "version": "1.0.0",
  "description": "The Formula One Discord Bot.",
  "main": "target/index.js",
  "type": "module",
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "prettier:write": "prettier --cache --write .",
    "prettier:check": "prettier --cache --check .",
    "eslint:write": "eslint . --fix",
    "eslint:check": "eslint .",
    "build": "rm -rf target/ && tsc",
    "start": "node target/index.js"
  },
  "author": "fozzie",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@sapphire/framework": "^5.0.7",
    "@sapphire/plugin-logger": "^4.0.2",
    "@sentry/integrations": "^7.107.0",
    "@sentry/node": "^7.107.0",
    "async-mutex": "^0.5.0",
    "bufferutil": "^4.0.8",
    "discord.js": "^14.13.0",
    "dotenv": "^16.4.5",
    "erlpack": "github:discord/erlpack",
    "mongodb": "^6.5.0",
    "re2": "^1.20.9",
    "tslib": "^2.6.2",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --cache --write",
    "*.{ts,tsx}": "eslint --fix"
  }
}
